<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic8"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textQuestions"
        android:layout_width="330dp"
        android:layout_height="155dp"
        android:layout_marginTop="200dp"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#DF401A0F"
        android:textSize="33sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/prime"
        android:layout_width="158dp"
        android:layout_height="65dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/button"
        android:fontFamily="casual"
        android:text="Prime"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#65301F"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/composite"
        android:layout_width="158dp"
        android:layout_height="65dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/button"
        android:fontFamily="casual"
        android:text="Composite"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#65301F"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/prime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TotalScore"
        android:layout_width="199dp"
        android:layout_height="65dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/button"
        android:fontFamily="casual"
        android:text="Total Score: 0"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#DF401A0F"
        android:textSize="28sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/QNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/QNo"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="casual"
        android:textAlignment="viewStart"
        android:textColor="#DF401A0F"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/textQuestions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Ans"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/button"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#DF401A0F"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textQuestions"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>